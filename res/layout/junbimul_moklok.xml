<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <TextView
        android:id="@+id/junmoklok1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="준비물 목록"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/junbimul_list_Image"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:background="@drawable/taeduri1"
        android:layout_margin="5dp"
        android:scaleType="fitCenter" />

    <ListView
        android:id="@+id/junbimul_list2"
        android:layout_width="match_parent"
        android:layout_height="251dp"
        android:layout_alignLeft="@+id/junbimul_list_Image"
        android:layout_alignRight="@+id/junbimul_list_Image"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:divider="#ffffff"
        android:dividerHeight="15px" >
    </ListView>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" >

        <Button
            android:id="@+id/startService"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_margin="7dp"
            android:layout_weight="1"
            android:background="@drawable/screen"
            android:text="잠금화면 실행"
            android:textSize="20dp" />

        <Button
            android:id="@+id/stopService"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_margin="7dp"
            android:layout_weight="1"
            android:background="@drawable/screen"
            android:text="잠금화면 해제"
            android:textSize="20dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout1"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="삭제 할 목록을 꾸~욱! 누르시면 삭제됩니다."
        android:textColor="#009ACD"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/junbimul_list2"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text=""
        android:textColor="#a9a9a9"
        android:textSize="30sp" />

</RelativeLayout>