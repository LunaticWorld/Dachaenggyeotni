<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gawjae_back"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="울리는 시간 : " />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NULL" />
    </LinearLayout>

    <Button
        android:id="@+id/datepickerbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gawjae_date"
        android:text="날짜 설정" />

    <Button
        android:id="@+id/timepickerbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gawjae_time_bar"
        android:text="시간 설정" />

    <ToggleButton
        android:id="@+id/button1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gawjae_toggle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="진동, 무음상태에도 알람이 울리도록 설정"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <ToggleButton
            android:id="@+id/toggleButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gawjae_toggle1"
            android:textOff=""
            android:textOn="" >
        </ToggleButton>
    </LinearLayout>

</LinearLayout>